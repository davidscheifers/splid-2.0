{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@groups/*": ["src/groups/*"],
      "@accounting/*": ["src/accounting/*"],
      "@transactions/*": ["src/transactions/*"],
      "@models/*": ["src/models/*"],
      "@users/*": ["src/users/*"],
      "@vpc/*": ["lib/vpc/*"],
      "@rds/*": ["lib/rds/*"],
      "@iam/*": ["lib/iam/*"],
      "@api/*": ["lib/api/*"],
      "@lib/*": ["lib/*"],
      "@bin/*": ["bin/*"],
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "./dist/**/*"
  ]
}
